# Application configuration
APP_NAME="Pokemon API"
APP_VERSION="1.0.0"
DEBUG=false

# Google AI (Required for LLM features)
# Get your API key at https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-api-key-here

# PokeAPI configuration
POKEAPI_BASE_URL="https://pokeapi.co/api/v2"
POKEAPI_TIMEOUT=5.0
POKEAPI_MAX_RETRIES=3

# Cache configuration
# Note: This cache is used for both Pokemon data AND agent responses
CACHE_ENABLED=true
CACHE_TYPE="memory"
CACHE_TTL=3600

# Redis configuration (if CACHE_TYPE="redis")
# REDIS_HOST="localhost"
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=""
